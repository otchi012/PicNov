<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
    <%= form_with model:@post, class: "form-horizontal", local: true do |f| %>
      <%= render "layouts/error_messages", resource: @post %>
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
          <%= f.fields_for :post_images do |image| %>
            <div class="dropzone-container">
              <div class="preview">
                <div class="dropzone-area">
                  <%= image.label :"イメージ", class: "dropzone-box", for: "upload-image" do %>
                    <%= image.file_field :src, multiple: true, id: "upload-image", class: "upload-image", 'data-image': 0 %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
         <%= f.label :"タイトル", class: "col-sm-3 control-label" %>
         <%= f.text_field :title, class: "col-sm-9 control-label title" %>
      </div>
      <div class="form-group">
         <%= f.label :"本文", class: "col-sm-3 control-label" %>
         <%= f.text_area :body, class: "col-sm-9 control-label body" %>
      </div>
      <div class="form-group">
         <%= f.label :"タグ", class: "col-sm-3 control-label" %>
         <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "col-sm-9 control-label tag_list" %>
      </div>
      </div>
      <div class="actions col-xs-7">
	     <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
      </div>
    <% end %>
  </div>
</div>
