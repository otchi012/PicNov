<%= render "layouts/error_messages", resource: @post %>
<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">新規投稿</h2>
    <%= form_with model:@post, local: true do |f| %>
      <div class="form-group col-sm-10 col-sm-offset-2">
        <%= f.attachment_field :post_images_images, multiple: true %>
      </div>
      <div class="form-group">
        <%= f.label :"タイトル", class: "col-sm-3 control-label text-right" %>
        <%= f.text_field :title, class: "col-sm-9 control-label title-new" %>
      </div>
      <div class="form-group">
        <%= f.label :"本文", class: "col-sm-3 control-label text-right" %>
        <%= f.text_area :body, size: "40x10", class: "col-sm-9 control-label body-new" %>
      </div>
      <div class="form-group">
        <%= f.label :"タグ", class: "col-sm-3 control-label text-right" %>
        <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "col-sm-9 control-label tag-new" %>
        <p class="text-right"> ※　,(カンマ)で区切ることで複数のタグをつけられます</p>
      </div>
      <div class="actions col-xs-11">
	     <%= f.submit "投稿する", class: "btn btn-primary btn-lg pull-right" %>
      </div>
    <% end %>
  </div>
</div>
