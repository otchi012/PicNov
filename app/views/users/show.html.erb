<div class="row">
  <h2>マイページ</h2>
  <div class="col-md-3">
    <!--ここにプロフィール情報-->
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
     <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <td>フォロー中</td>
          <td>
            <%= link_to following_user_path(@user) do %>
              <%= @user.following.count %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>フォロワー</td>
          <td>
            <%= link_to followers_user_path(@user) do %>
              <%= @user.followers.count %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id), class:"col-xs-12 btn btn-default" do %>
          <i class="glyphicon glyphicon-wrench">編集する</i>
        <% end %>
      <% else %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  <div class="col-md-9">
    <h2>投稿一覧</h2>
    <div class="post-item">
      <% @posts.each do |post| %>
        <ul class="post-index-header">
          <li>
            <%= link_to user_path(post.id) do %>
              <%= attachment_image_tag post.user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
              <%= post.user.name %>
            <% end %>
          </li>
          <li>
            <%= post.title %>
          </li>
          <% if post.user == current_user %>
            <li>
              <%= link_to "編集", edit_post_path(post) %>
              <%= link_to "削除", post_path(post), method: :delete %>
            </li>
          <% end %>
        </ul>
        <div class="post-image">
          <% post.post_images.first(1).each do |image| %>
            <%= attachment_image_tag image, :image, :fill, 100, 100, class: "default_image" %>
          <% end %>
        </div>
        <div class="post-body">
          <%= post.body %>
        </div>
        <ul class="inline-meta">
          <li class="favorite-btn_<%= post.id %>">
            <%= render 'favorites/favorite-btn', post: post %>
          </li>
          <li class="comment-count">
            <%= link_to "コメント数:#{post.post_comments.count}", post_path(post.id) %>
          </li>
          <li>
            <%= render 'posts/tag_list', tag_list: post.tag_list %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
