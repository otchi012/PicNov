<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">登録情報編集</h2>
    <div class="edit-user">
    <%= form_with model:@user, local:true do |f| %>
      <%= render "layouts/error_messages", resource: @user %>
      <div class="field">
        <label>ユーザー名</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>プロフィール画像</label>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="field">
        <label>自己紹介</label>
        <%= f.text_area :introduction %>
      </div>
      <div class="action">
        <%= f.submit "登録する" %>
      </div>
    <% end %>
  </div>
</div>