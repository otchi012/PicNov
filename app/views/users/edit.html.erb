<div class="row">
  <div class="col-md-12">
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    <h2 class="head-line title_h2 text-center">ユーザープロフィール編集</h2>
    <div class="edit-user">
      <%= form_with model:@user, local:true do |f| %>
        <%= render "layouts/error_messages", resource: @user %>
        <div class="field">
          <label>ユーザー名</label>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <label>プロフィール画像</label>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="field">
          <p>自己紹介</p>
          <%= f.text_area :introduction, size: "40x10" %>
        </div>
        <div class="action">
          <%= f.submit "登録する" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "戻る", user_path(@user) %>