<h3>コメント</h3>
<% post.post_comments.each do |post_comment| %>
  <div>
    <%= link_to user_path(post_comment.user.id) do %>
      <%= attachment_image_tag post_comment.user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
      <%= post_comment.user.name %>
    <% end %>
    <br>
    <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <td>
        <%= link_to "Destroy", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, "data-confirm" =>"本当に消しますか？", class:"btn-sm btn-danger" %>
      </td>
    <% end %>
  </div>
<% end %>
