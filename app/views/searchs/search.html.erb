<% if @model == 'user' %>
  <h2>
    ユーザーの検索結果
  </h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, size: "60x60", format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
          <% end %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          フォロー数：
          <%= user.following.count %>
        </td>
        <td>
          フォロワー数：
          <%= user.followers.count %>
        </td>
        <td>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
<% else %>
  <h2>
    投稿の検索結果
  </h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th>タイトル</th>
        <th>投稿画像</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, size: "60x60", format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
          <% end %>
        <td>
          <%= post.user.name %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td>
          <% if post.post_images.present? %>
            <% post.post_images.first(1).each do |image| %>
              <%= attachment_image_tag image, :image, :fill, 60, 50, class: "default_image" %>
            <% end %>
          <% else %>
            画像はありません。
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
<% end %>