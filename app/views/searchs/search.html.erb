<% if @model == 'user' %>
  <h2>
    ユーザーの検索結果
  </h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>name</th>
        <th>opinion</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
        <td>
          <%= user.name %>
        </td>
        <td>
          フォロー数：
          <%= user.following.count %>
        </td>
        <td>
          フォロワー数：
          <%= user.followers.count %>
        </td>
        <td>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
          <% end %>
        </td>
        <td>
          <%= link_to "Show", user_path(user.id) %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
<% else %>
  <h2>
    投稿の検索結果
  </h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
          <% end %>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td>
          <%= post.body %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
<% end %>